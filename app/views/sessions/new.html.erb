
<%= form_for(:session, url: login_url) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <div class="control">
      <%= f.email_field :email, class: 'input'  %>
    </div>
  </div>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <div class="control">
      <%= f.password_field :password, class: 'input'  %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.submit 'Log In', class: 'button is-link'  %>
    </div>
  </div>

<% end %>
