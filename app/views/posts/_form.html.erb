<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :body, class: "content is-medium", value: "Gossip" %>
    <%= form.text_area :body, id: :post_body, placeholder: "There's another person inside kevin working him with controls", class: "content is-small", style: "width: 300px;" %>
  </div>

  <div class="field">
    <%= form.label :title, class: "content is-medium", value: "Reaction" %>
    <%= form.text_field :title, id: :post_title, placeholder: "oh god whyy!", class: "content is-small", style: "width: 300px;" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
